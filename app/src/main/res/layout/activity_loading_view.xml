<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6200ea"
    tools:context=".LoadingView.LoadingViewActivity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ldoublem.loadingviewlib.LVCircularCD
            android:layout_margin="2dp"
            android:id="@+id/lvCD"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

        <com.ldoublem.loadingviewlib.view.LVCircularRing
            android:layout_margin="2dp"
            android:id="@+id/lvRing"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

        <com.ldoublem.loadingviewlib.LVCircular
            android:layout_margin="2dp"
            android:id="@+id/lvCircular"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

        <com.ldoublem.loadingviewlib.view.LVFinePoiStar
            android:layout_margin="2dp"
            android:id="@+id/lvStar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ldoublem.loadingviewlib.view.LVCircularSmile
            android:layout_margin="2dp"
            android:id="@+id/lvSmile"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

        <com.ldoublem.loadingviewlib.view.LVGears
            android:layout_margin="2dp"
            android:id="@+id/lvGears"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

        <com.ldoublem.loadingviewlib.view.LVGearsTwo
            android:layout_margin="2dp"
            android:id="@+id/lvGears2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

        <com.ldoublem.loadingviewlib.view.LVWifi
            android:layout_margin="2dp"
            android:id="@+id/lvWifi"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ldoublem.loadingviewlib.view.LVCircularJump
            android:layout_margin="2dp"
            android:id="@+id/lvJump"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

        <com.ldoublem.loadingviewlib.view.LVCircularZoom
            android:layout_margin="2dp"
            android:id="@+id/lvZoom"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

        <com.ldoublem.loadingviewlib.view.LVPlayBall
            android:layout_margin="2dp"
            android:id="@+id/lvBall"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

        <com.ldoublem.loadingviewlib.view.LVNews
            android:layout_margin="2dp"
            android:id="@+id/lvNews"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ldoublem.loadingviewlib.LVLineWithText
            android:id="@+id/lvLine"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <com.ldoublem.loadingviewlib.view.LVEatBeans
            android:id="@+id/lvEat"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ldoublem.loadingviewlib.LVChromeLogo
            android:layout_margin="2dp"
            android:id="@+id/lvChrome"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

        <com.ldoublem.loadingviewlib.view.LVRingProgress
            android:layout_margin="2dp"
            android:id="@+id/lvRingProgress"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

        <com.ldoublem.loadingviewlib.view.LVBlock
            android:layout_margin="2dp"
            android:id="@+id/lvBlock"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

        <com.ldoublem.loadingviewlib.view.LVFunnyBar
            android:layout_margin="2dp"
            android:id="@+id/lvBar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ldoublem.loadingviewlib.view.LVGhost
            android:layout_margin="2dp"
            android:id="@+id/lvGhost"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="180dp" />

        <com.ldoublem.loadingviewlib.view.LVBlazeWood
            android:layout_margin="2dp"
            android:id="@+id/lvWood"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="180dp" />

        <com.ldoublem.loadingviewlib.view.LVBattery
            android:layout_margin="2dp"
            android:id="@+id/lvBattery"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnStop"
            android:background="#6200ea"
            android:text="stop"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnStart"
            android:background="#6200ea"
            android:text="start all"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>